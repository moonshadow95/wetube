mixin videoPlayer(video = {})
    .videoPlayer#jsVideoPlayer
        video(src=`/${video.src}`, autoplay)
        .videoPlayer__controls
            .videoPlayer__column
                span#jsVolumneButton
                    i.fas.fa-volume-up
                span
                    span#currentTime &nbsp;&nbsp;00:00:00
                    |/
                    span#totalTime &nbsp;&nbsp;00:00:00
                input.videoPlayer__volume#jsVolume(type="range", min="0", max="1", step="0.1" value="5")
            .videoPlayer__column
                span#jsPlayButton
                    i.fas.fa-pause
            .videoPlayer__column
                span#jsFullScreen
                    i.fas.fa-expand